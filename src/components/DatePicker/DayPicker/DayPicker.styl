cell-width = 1.75em
cell-height = 2em

.day-picker
  display flex
  flex-flow row wrap
  box-sizing content-box
  padding (cell-height / 2) (cell-width / 2)
  width 7 * cell-width
  &__day-name, &__day-item
    display block
    width cell-width
    height cell-height
    line-height cell-height
    text-align center
  &__day-item
    &:hover
      background-color lightgray
    cursor pointer
  .locked &__day-item
    &:hover
      background-color transparent
    opacity 0.8
  & > .cur-day
    background-color darkgrey !important
    font-weight bold
  & > .out-day
    opacity 0.5